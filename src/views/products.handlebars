<h1 class="main_title">Productos</h1>

<nav class="navbar_products">
    {{#if info.hasPrevPage}}
    <a href="/product?page={{info.prevPage}}">Anterior {{info.prevPage}}</a>
{{/if}}
<p>Página actual: {{info.page}}</p>
{{#if info.hasNextPage}}
    <a href="/product?page={{info.nextPage}}">Siguiente {{info.nextPage}}</a>
{{/if}}
</nav>
<main>
    <section class="product_list">
        <div class="info">
            <h3>Total de productos: {{info.totalDocs}}</h3>
            <p> Productos por página: {{info.limit}}</p>
            <p>Total de páginas: {{info.totalPages}}</p>
        </div>
        {{#each info.docs}}
        <article class="product_card">
            <h2>{{title}}</h2>
            <img src="{{this.imageUrl}}" alt="Logo de {{this.title}}">
            <p>Descripción: {{this.description}}</p>
            <p>Categoría: {{this.category}}</p>
            <p>Precio: {{this.price}} </p>
            <p>Stock: {{this.stock}}</p>
            <button class="add_to_cart" id="{{this._id}}">Agregar al carrito</button>
        </article>
    {{/each}}
    </section>
</main>

<nav class="navbar_products">
{{#if info.hasPrevPage}}
    <a href="/product?page={{info.prevPage}}">Anterior {{info.prevPage}}</a>
{{/if}}
<p>Info página actual: {{info.page}}</p>
{{#if info.hasNextPage}}
    <a href="/product?page={{info.nextPage}}">Siguiente {{info.nextPage}}</a>
{{/if}}
</nav>
